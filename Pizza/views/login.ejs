<div class="row">

    <div class="col-sm-4"></div>

    <div class="col-sm-4">
        <form action="/Auth/login" method="post">
            <h1>Login</h1>
            <div class="form-group">
                <label>Correo</label>
                <input type="email" class="form-control" placeholder="Ingrese su Correo" name="correo">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" placeholder="Ingrese su Password" name="password">
            </div>
            <button type="submit" class="btn btn-block btn-success">Entrar</button>

        </form>

        <a class="btn btn-primary btn-lg" href="/CrearUsuario" role="button">Registrar Usuarios</a>
    </div>

    <div class="col-sm-4"></div>

</div>
